<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/color_primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_devider</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="backgroundTint">@color/black</item>
        <item name="background">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButtons_night" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:insetBottom">@dimen/button_insert_Bottom</item>
        <item name="android:insetTop">@dimen/button_insert_Top</item>
        <item name="android:textSize">@dimen/text_size_buttons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundTint">@color/design_default_color_primary_dark</item>

    </style>

    <style name="MyTextViewStyle_night">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|end</item>
        <item name="backgroundTint">@color/black</item>
    </style>

</resources>