<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_devider</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButtons" parent="Widget.MaterialComponents.Button">
        <!--        <item name="backgroundTint">@color/color_accent</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:insetBottom">@dimen/button_insert_Bottom</item>
        <item name="android:insetTop">@dimen/button_insert_Top</item>
        <item name="android:textSize">@dimen/text_size_buttons</item>
        <item name="cornerRadius">@dimen/corner_radius_buttons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>

    </style>

    <style name="MyLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_Start</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_End</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|end</item>
    </style>

</resources>